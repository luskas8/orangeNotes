{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@config": ["src/config"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@contexts": ["src/contexts"],
      "@contexts/*": ["src/contexts/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/@types"],
      "@types/*": ["src/@types/*"],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
